{% extends 'base.html.twig' %}

{% block title %}Hello contact!{% endblock %}

{% block body %}
    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Contact</h1>
            <p class="lead text-muted mb-0">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Animi earum facilis maiores nemo odio reiciendis sint! A accusantium dolorem facilis illo magni obcaecati praesentium ratione sed temporibus, ut. Enim, incidunt.</p>
        </div>
    </section>


<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path ('home') }}">Accueil</a></li>
            <li class="breadcrumb-item active" aria-current="page">Contact</li>
        </ol>
    </nav>
</div>

<div class="container" id="formulaire">
    <nav class="navbar navbar" id="nav">
  <span class="navbar-text">
      <i class="fa fa-envelope"></i>
    Contactez-nous
  </span>
    </nav>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {# form_widget(form) #}
    <div class="row">
        <div class="col-12">
            {{ form_label(form.name, 'Votre nom') }}
            {{ form_widget(form.name) }}
        </div>
        <div class="col-12">
            {{ form_row(form.email) }}
        </div>
    </div>

    {{ form_rest(form) }}

    <button class="btn btn-primary btn-block">Envoyer</button>
    {{ form_end(form) }}

</div>
{% endblock %}


