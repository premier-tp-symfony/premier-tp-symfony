{% extends 'base.html.twig' %}

{% block title %}Liste des produits - {{ parent() }}{% endblock %}

{% block body %}

    <div class="row">
        {% for product in products %}
            <div class="col-lg-3">
                <div class="card mb-4">
                    <div class="card-body">
                        <h3 class="card-title">{{ product.name }}</h3>
                        <h5>{{ product.price / 100 }} &euro;</h5></div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
